  "name": "Extra Nav Header",
  "class": "mobile-extra--header",
  "settings": [
  {
    "type": "link_list",
    "id": "extra_nav_menu",
    "label": "Menu",
    "default": "main-menu"
    }
  ],
    "presets": [{
    "name": "Extra Nav Header",
    "category": "Menu"
  }]
}

