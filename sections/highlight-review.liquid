<section class="Section Section--spacingNormal" id="section-{{ section.id }}">
  <div class="Container">
    <a href="{{ settings.section.link }}">
      <div style="text-align: center;">
        <span style="color: #f49ac1; font-size: 30px">★ ★ ★ ★ ★</span><br />
        <h2 class="u-h2" style="margin: 0; line-height: 1.15"><i>“{{ section.settings.review }}”</i></h2>
        <div class="Text--subdued" style="margin-top: 6px;">
          {{ section.settings.name }}, Verified Buyer
        </div>
      </div>
    </a>
  </div>
</section>

{% schema %}
  {
    "name": "Highlight Review",
    "settings": [
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "review",
      "label": "Review quote"
    },
    {
      "type": "text",
      "id": "name",
      "label": "Customer name"
    }
    ],
    "presets": [
    {
      "category": "Advanced",
      "name": "Highlight Review",
      "settings": {}
    }
  ]
  }
{% endschema %}